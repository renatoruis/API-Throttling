{
  "name": "api-throttling",
  "description": "API de Throttling e Rate Limiting",
  "type": "nixpacks",
  "buildPath": "/",
  "env": {
    "PORT": "8888",
    "RATE_LIMIT_REQUESTS": "10",
    "RATE_LIMIT_PERIOD": "1",
    "THROTTLE_MIN_MS": "100",
    "THROTTLE_MAX_MS": "500"
  },
  "port": 8888,
  "healthCheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "database": {
    "type": "postgres",
    "name": "api-throttling-db",
    "version": "16",
    "env": {
      "POSTGRES_DB": "apidb",
      "POSTGRES_USER": "postgres"
    }
  }
}

