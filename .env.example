# Server Configuration
PORT=8888

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=apidb

# Rate Limiting Configuration
# RATE_LIMIT_REQUESTS: Number of requests allowed
# RATE_LIMIT_PERIOD: Time period in seconds
# Example: 10 requests per 1 second = 10 req/s
# Example: 100 requests per 60 seconds = ~1.67 req/s
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_PERIOD=1

# Throttling Configuration (artificial delay/latency)
# THROTTLE_MIN_MS: Minimum delay in milliseconds
# THROTTLE_MAX_MS: Maximum delay in milliseconds
# Set THROTTLE_MAX_MS=0 to disable throttling
# Example: MIN=100, MAX=500 → random delay between 100-500ms per request
# Example: MIN=200, MAX=200 → fixed 200ms delay per request
THROTTLE_MIN_MS=100
THROTTLE_MAX_MS=500

